  require([ 'jquery'], function($){
    //$('#first').text('Записав текст у темплейті');
	$( '#form1' ).submit(function( event ) {
  event.preventDefault();
  
  var form = $( this );
 
  $.ajax({
    type: 'POST',
    url: '../save/save',
    data: form.serialize(),
    success: function( html ) {
      console.log( html );
	  $("#tt").empty();
      $("#tt").html(html);
	  $('#form1')[0].reset();
    }
  });
  return false;
});


});

  
</script>